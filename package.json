{
  "name": "echoboard",
  "version": "1.0.0",
  "description": "EchoBoard - Accessible AAC Communication App",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000",
    "build": "echo 'Building for production...' && mkdir -p dist && cp -r *.html *.css *.js icons dist/",
    "cap:init": "npx cap init",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android"
  },
  "keywords": ["aac", "communication", "accessibility", "pwa"],
  "author": "Federico Chialvo and Dean Sitton",
  "license": "UNLICENSED",
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "@capacitor/core": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/android": "^5.0.0"
  }
} 